<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" 
      xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestaoprojetos.controller.LoginController"
      style="-fx-background-color: #f0f0f0; -fx-padding: 40;">
    
    <Label text="Sistema de GestÃ£o de Projetos" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <GridPane hgap="10" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200"/>
        </columnConstraints>
        
        <rowConstraints>
            <RowConstraints minHeight="30" prefHeight="30"/>
            <RowConstraints minHeight="30" prefHeight="30"/>
        </rowConstraints>

        <Label text="Login:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Digite seu login"/>

        <Label text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
               style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="senhaField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                      promptText="Digite sua senha"/>
    </GridPane>

    <Button text="Entrar" onAction="#handleLogin" 
            style="-fx-font-size: 14px; -fx-pref-width: 120px; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    
    <Label fx:id="mensagemLabel" style="-fx-text-fill: red; -fx-font-weight: bold;"/>

</VBox>
